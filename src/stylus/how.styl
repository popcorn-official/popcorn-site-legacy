#how {
	background: url(../images/bg-how.jpg) no-repeat center #0e1226;
	background-size: cover;
	min-height: 520px;
	position: relative;
	color: #fff;
	box-sizing: border-box;
	padding-top: 60px;
	overflow: hidden;
	text-align: center;

	h2, h4 {
		margin: 0 0 10px;
		font-family: 'Montserrat Light';
		font-weight: normal;
	}

	h2 {
		font-size: 32px;
	}

	h4 {
		color: #a1b4c6;
		font-size: 20px;
	}

	.steps {
		position: relative;
		font-weight: normal;
		margin-top: 50px;
		padding-left: 0;
		display: -webkit-box;
		display: -moz-box;
		display: -ms-flexbox;
		display: -webkit-flex;
		display: flex;
		-webkit-flex-wrap: wrap;
		flex-wrap: wrap;
		-webkit-align-content: center;
		align-content: center;
		-webkit-justify-content: center;
		justify-content: center;

		li {
			line-height: 25px;
			min-width: 175px;
			position: relative;
			list-style: none;
			padding-top: 175px;
			display: block;
			overflow: visible;
			font-family: 'Montserrat';
			font-size: 18px;
			width: 190px;
			margin-bottom: 50px;
			-webkit-flex-grow: 1;
			flex-grow: 1;
			-webkit-align-self: center;
			align-self: center;

			&.how-open {
				background: url(../images/how-open.png) no-repeat top center;
				background-size: auto 157px;
			}

			&.how-subtitles {
				background: url(../images/how-subtitles.png) no-repeat top center;
				background-size: auto 157px;
			}

			&.how-play {
				background: url(../images/how-play.png) no-repeat top center;
				background-size: auto 157px;
			}
		}
	}
}
